<%- include("template/header.ejs") %>
<% if (locals.blogs && locals.blogs.length > 0) { %>
    <div class="container-fluid my-4">
        <div class="row">
            <% locals.blogs.forEach((blog, index) => { %>
                <% if (index % 3 === 0 && index !== 0) { %>
                    </div><div class="row">
                <% } %>
                <div class="col-md-4 mb-4">
                    <div class="card" style="width: 100%;">
                        <div class="card-body content-card">
                            <h5 class="card-title"><%= blog.title %></h5>
                            <p class="card-text"><%= blog.content.slice(0, (blog.content.length / 3)) %>...</p>
                            <a href="/blogs/<%= blog.id %>" class="card-link">View more</a>
                        </div>
                    </div>
                </div>
            <% }) %>
        </div>
    </div>
<% } else { %>
    <div class="container-fluid">
        <div class="row">
            <h1 class="col text-center m-4">There are no blogs yet</h1>
        </div>
    </div>
<% } %>
<%- include("template/footer.ejs") %>
